{
  "publishConfig": {
    "tag": "next"
  },
  "name": "bootprint-base",
  "version": "1.0.0",
  "description": "The base configuration used by other Bootprint modules",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix .",
    "test": "mocha --recursive && npm run lint",
    "coverage": "rm coverage -rf && istanbul cover --dir coverage/mocha ./node_modules/.bin/_mocha --print none -- --recursive",
    "postcoverage": "istanbul report --root coverage text-summary html  && istanbul check-coverage --statements 100",
    "thought": "thought run -a",
    "version": "thoughtful changelog -o -a && npm run thought"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bootprint/bootprint-base.git"
  },
  "author": "Nils Knappmeier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bootprint/bootprint-base/issues"
  },
  "homepage": "https://github.com/bootprint/bootprint-base",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "cheerio": "^0.22.0",
    "handlebars": "^4.0.6",
    "highlight.js": "^8",
    "json-stable-stringify": "^1.0.1",
    "marked": "^0.3.6"
  },
  "devDependencies": {
    "bootprint-unit-testing": "^2.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "thought": "^1.1.2",
    "thought-plugin-jsdoc": "^1.0.0",
    "thoughtful-release": "^0.3.1",
    "trace-and-clarify-if-possible": "^1.0.0"
  },
  "peerDependencies": {
    "bootprint": "^2.0.0"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "handlebars",
    "less",
    "index.js"
  ]
}
